@model Client.Types.Contact

@{
    ViewData["Title"] = "Create a new Contact";
}

<h3>Enter names of a new Contact.</h3>

<div asp-validation-summary="ModelOnly"></div>
<form method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>First Name: <input asp-for="Firstname" class="form-control" /></label>
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Last Name: <input asp-for="Lastname" class="form-control" /></label>
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>
