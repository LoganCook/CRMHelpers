@model Client.Types.Product

@{
    ViewData["Title"] = "Product detail";
}

<h2>@Model.Name</h2>

<dl class="dl-horizontal">
    <dt>Description</dt>
    <dd>@Model.Description</dd>
    <dt>State</dt>
    <dd>@Model.Status</dd>
    <dt>Begin Date</dt>
    <dd>@Model.ValidFromDate</dd>
    <dt>End Date</dt>
    <dd>@Model.ValidToDate</dd>
    <dt>Type</dt>
    <dd>@Model.Type</dd>
    <dt>Unit</dt>
    <dd>@Model.Unit</dd>
    <dt>Default Price List</dt>
    <dd>@Model.Pricelist</dd>
</dl>

<h4>Properties</h4>
<dl class="dl-horizontal">
    @foreach (var item in @Model.Properties)
    {
        <dd><a asp-controller="Dynamicproperty" asp-action="Get" asp-route-id="@item.ID">@item.Name</a></dd>
    }
</dl>